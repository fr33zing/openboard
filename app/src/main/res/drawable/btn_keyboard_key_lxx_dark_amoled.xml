<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Action keys. -->
    <item android:drawable="@drawable/btn_keyboard_key_action_pressed_lxx_dark" android:state_active="true" android:state_pressed="true" />
    <item android:drawable="@drawable/btn_keyboard_key_action_normal_lxx_dark" android:state_active="true" />

    <!-- Toggle keys. Use checkable/checked state. -->
    <item android:drawable="@drawable/fr33zing_key_press" android:state_checkable="true" android:state_checked="true" android:state_pressed="true" />
    <item android:drawable="@drawable/fr33zing_key_press" android:state_checkable="true" android:state_pressed="true" />
    <item android:drawable="@color/background_amoled_black" android:state_checkable="true" android:state_checked="true" />
    <item android:drawable="@color/background_amoled_black" android:state_checkable="true" />

    <!-- Empty background keys. -->
    <item android:drawable="@drawable/fr33zing_key_press" android:state_empty="true" android:state_pressed="true" />
    <item android:drawable="@android:color/transparent" android:state_empty="true" />

    <!-- Normal keys. -->
    <item android:drawable="@drawable/fr33zing_key_press" android:state_pressed="true" />
    <item android:drawable="@color/background_amoled_black" />
</selector>
